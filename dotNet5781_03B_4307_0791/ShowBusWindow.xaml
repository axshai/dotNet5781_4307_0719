<Window x:Class="PLGuiWPF.ShowLinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGuiWPF"
        mc:Ignorable="d"
        Title="ShowLinesWindow" Height="450" Width="800">
    <Grid x:Name="myG">
        <Grid HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" Width="100"/>
        <ComboBox x:Name="cbLines"  Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15"   DisplayMemberPath="LineNumber"  />
        <ListBox x:Name="lbLines" Grid.Row="1" Grid.ColumnSpan="4"  HorizontalAlignment="Center" VerticalAlignment="Center"  Width="708" Height="316" Margin="43,10,42.6,10" />
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>