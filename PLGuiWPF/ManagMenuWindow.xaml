<Window x:Class="PLGuiWPF.ManagMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGuiWPF"
        mc:Ignorable="d"
        Title="ManagMenuWindow" Height="450" Width="800">
    <Grid Background="#FFAE6767">
        <Button  x:Name="Buttonshowline" Content="Show All Lines" HorizontalAlignment="Left" Height="110" Margin="37,90,0,0" VerticalAlignment="Top" Width="211"  Click="Buttonshowline_Click" FontSize="20" FontFamily="Franklin Gothic Heavy" Background="#FFED7474"  />
        <TextBlock Text="{Binding BusLineBO}" Margin="452,120,136.6,106"/>
        <Button   x:Name="ButtonshowStation"  Content="Show All BusStations" HorizontalAlignment="Left" Margin="285,90,0,0" VerticalAlignment="Top" Width="209" Height="110"  Click="ButtonshowStation_Click" FontSize="20" FontFamily="Impact" Background="#FFED6969"/>
    </Grid>
</Window>