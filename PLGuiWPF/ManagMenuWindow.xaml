<Window x:Class="PLGuiWPF.ManagMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGuiWPF"
        mc:Ignorable="d"
        Title="ManagMenuWindow" Height="165" Width="400">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Button  x:Name="Buttonshowline" Grid.Row="0" Content="LINES" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="5"    Click="Buttonshowline_Click"  FontSize="26" FontFamily="Franklin Gothic Heavy" Background="#FFED7474"  />

        <Button   x:Name="ButtonshowStation"  Grid.Row="1"  Content="STATIONS" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" Click="ButtonshowStation_Click" FontSize="26" FontFamily="Franklin Gothic Heavy" Background="#FFED6969"/>
    </Grid>
</Window>