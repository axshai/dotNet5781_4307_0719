<Window x:Class="PLGuiWPF.ShowStationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGuiWPF"
        mc:Ignorable="d"
        Title="ShowStationsWindow" Height="700
        " Width="800" ResizeMode="NoResize" Closing="Window_Closing">
    <Window.Resources>
        <local:ListOfStationsToFirst 
             x:Key="ListOfStationsToFirst"/>
        <local:ListOfStationsToLast
             x:Key="ListOfStationsToLast"/>

        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF99EDF1" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>

        </Style>
        <Style x:Key="dataGridStyle"  TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource HeaderStyle}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#FF99D3F1"/>
            <Setter  Property="FontSize" Value="18"/>
            <Setter  Property="ColumnWidth" Value="auto"/>
        </Style>

    </Window.Resources>
    <Grid x:Name="mainGrid" Background="#FFE5F5F9" ScrollViewer.CanContentScroll="True"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgStations" Style="{StaticResource dataGridStyle}" Grid.Row="1" Margin="30" MouseDoubleClick="dgStations_MouseDoubleClick"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="StationName"  Binding="{Binding StationName}" Width="auto" />
                <DataGridTextColumn Header="station key" Binding="{Binding StationKey}" Width="*"/>
                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude}"  Width="*"/>
                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude}" Width="*"/>
                <DataGridTextColumn Header="area" Binding="{Binding Area}"  Width="*"/>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="editButton" Content="edit" Margin="5" Background="#FFCCB2E4" Click="editButton_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="delButton" Content="delete" Margin="5" Background="#FFD6EBA9" Click="delButton_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="addButton" Content="ADD NEW STATION" HorizontalAlignment="Left" Grid.RowSpan="2" Margin="10,50" Grid.Row="0" VerticalAlignment="Top" Width="160" Height="30"  Background="#FFE4BABA" FontSize="18" Click="addButton_Click" />
        <Image HorizontalAlignment="Left" Grid.Row="0" Width="30" Height="30"  VerticalAlignment="Top" Source="search.jpg"/>
        <TextBox x:Name="tbsearch" HorizontalAlignment="Left" Height="28" Margin="30,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="18" TextChanged="tbsearch_TextChanged" />

        <Grid x:Name="simGrid" Background="#FFE7FFFB" Margin="410,10,9.6,508.4" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="102.4"/>
                <RowDefinition Height="AUTO"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Label Content="select start time:" HorizontalAlignment="Left" 
               HorizontalContentAlignment="Left" VerticalContentAlignment="Top"  VerticalAlignment="Top"  Width="200" Height="45" FontSize="24" Grid.RowSpan="2" />
            <Label  x:Name="LtimeDisplay" FontSize="24"  Grid.Column="1" HorizontalAlignment="Left" Width="170" Margin="0,0,0,100.4" Grid.RowSpan="2"/>
            <local:TimeControl  x:Name="startTime" FontSize="18"  Grid.Column="1" HorizontalAlignment="Left" Width="170" IsEnabled="{Binding ElementName=tbspeed, Path=IsEnabled, Mode=TwoWay}" Margin="0,0,0,100.4" Grid.RowSpan="2"/>
            <Label Content="select speed:" VerticalAlignment="Top" 
               HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Width="200" Height="45" FontSize="24" Grid.Row="1" Margin="0,2,0,0" />
            <TextBox x:Name="tbspeed" MaxLength="4" VerticalAlignment="Top"  
                 Grid.Row="1" Grid.Column="1" Height="45" Width="70" HorizontalAlignment="Left" Margin="5,3,0,0" TextAlignment="Center" FontSize="24" PreviewTextInput="tbspeed_PreviewTextInput" />
            <Button x:Name="simulatorButton" Grid.Row="1" Grid.ColumnSpan="2"  Click="simulatorButton_Click" 
                HorizontalAlignment="Center" Width="200" Margin="90,57,210,10.4"  FontSize="24"  >
                <Button.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=tbspeed, Path=IsEnabled}" Value="True">
                                <Setter Property="Button.Background" Value="#FFC5E8A8"/>
                                <Setter Property="Button.Content" Value="start"/>
                                
                            </DataTrigger>
                            <DataTrigger  Binding="{Binding ElementName=tbspeed, Path=IsEnabled}" Value="False">
                                <Setter Property="Button.Background" Value="#FFE26565"/>
                                <Setter Property="Button.Content" Value="stop"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

    </Grid>
</Window>
